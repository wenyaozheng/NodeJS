<%- extend('./layout') %>
<!-- Page Content -->
<style>
    .navbar-toggler {
        z-index: 1;
    }

    @media (max-width: 576px) {
        nav > .container {
            width: 100%;
        }
    }

    footer {
        margin-top: 20px;
    }
</style>
<br/>
<div class="container">

    <h2>Visits</h2>
    <form action="/addVisits" method="post">

        <input type="hidden" name="sp" value="<%= sp %>">
        <input type="hidden" name="reqid" value="<%= requestid %>">
            <button class="btn btn-success">Add Visit</button>

    </form>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date Scheduled</th>
            <th>Description</th>
            <th>Time</th>
            <th></th>
        </tr>
        </thead>
        <% visits.forEach(function(visit){ %>
        <tr>
            <td><%= visit.scheduled_date %></td>
            <td><%= visit.description %></td>
            <td><%= visit.time %></td>
        </tr>
        <% }); %>
    </table>
<div class="container pull-right">
    <form style="text-align: right; float:right" action="/home" method="post">
        <button class="btn btn-danger">Cancel</button>
    </form>
    <form style="text-align: right; float:right" action="/home" method="post">
        <button class="btn btn-info">Save</button>
    </form>


</div>


</div>

<!-- /.container -->